
# An alternative hardstatus to display a bar at the bottom 
hardstatus on
hardstatus alwayslastline
hardstatus string "%{.yk}%-w%{.yw}%n %t%{-}%+w %=%{..k} %H %{..k} %D %d/%m %C%a "

# For mouse tracking of split windows
mousetrack on

# For 256 colors
term screen-256color

# No more startup message
startup_message off

# Use X scrolling mechanism
termcapinfo xterm* ti@:te@

#Fix for residual editor text
altscreen on

#Fix for Name column in windowlist
windowlist string "%4n %h%=%f"


